@model VirtualPlay.Business.Models.Pay_RateItems

@{
    ViewBag.Title = "Edit";
}

<h2>Itens</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idRate)

        @Html.HiddenFor(model => model.idRateItem)

        <div class="form-group">
            <label class="control-label col-md-2" for="flStatus">
                Nome
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nmRateItem)
                @Html.ValidationMessageFor(model => model.nmRateItem)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="flStatus">
                Valor
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.value, "Currency")
                @Html.ValidationMessageFor(model => model.value)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="flStatus">
                Dias(D+)
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nbDays,  new {htmlAttributes = new {min = 1, max = 31} })
                @Html.ValidationMessageFor(model => model.nbDays)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="flStatus">
                Status
            </label>
            <div class="col-md-10">
                @Html.DropDownList("rateItemStatus", new SelectList(ViewBag.RateItemStatusList, "Value", "Text"))
                @Html.ValidationMessageFor(model => model.flStatus)
            </div>
        </div>

        <div class="form-group" style="visibility: hidden; height: 0px;">
            @Html.LabelFor(model => model.idUserCreate, "idUserCreate", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idUserCreate", String.Empty)
                @Html.ValidationMessageFor(model => model.idUserCreate)
            </div>
        </div>

        <div class="form-group" style="visibility: hidden; height: 0px;">
            @Html.LabelFor(model => model.dtCreate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dtCreate)
                @Html.ValidationMessageFor(model => model.dtCreate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
