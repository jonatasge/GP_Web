@model IEnumerable<VirtualPlay.Business.Models.Pay_RateItems>

@{
    ViewBag.Title = "Taxa";
}
@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>Nome/Descrição
        </th>
        <th>Valor
        </th>
        <th>Dias
        </th>
        <th>Status
        </th>
        <th>Criado em
        </th>
        <th>Atualizado em
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nmRateItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nbDays)
            </td>
            <td>
                @{
        string stStatus = "";
        if (item.flStatus.Equals("A"))
        {
            stStatus = "Ativo";
        }
        else
        {
            stStatus = "Inativo";
        }
                }
                @stStatus
            </td>
            <td>
                @Html.ValueFor(modelItem => item.dtCreate, "{0:dd/MM/yy HH:mm}")
            </td>
            <td>
                @Html.ValueFor(modelItem => item.dtLastUpdate, "{0:dd/MM/yy HH:mm}")
            </td>
            <td>
                @Html.ActionLink("Alterar", "Details", new { id = item.idRate, item = item.idRateItem, items = "edit"})
                @* | @Html.ActionLink("Detalhes", "DetailsItems", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
    }

</table>
}
else
{
    @*<h4>Nao ha itens</h4>*@
}