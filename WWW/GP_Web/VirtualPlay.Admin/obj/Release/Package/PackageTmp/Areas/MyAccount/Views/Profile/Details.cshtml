    ViewBag.Title = "Minha Conta";
}

<h2>Minha Conta</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nmUser)
        </dd>

        <dt>
            E-mail
